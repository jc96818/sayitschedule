# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/sayitschedule

# Organization domain for local development
ORG_DOMAIN=demo

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT expiration (jsonwebtoken format, e.g. 15m, 8h, 7d)
JWT_EXPIRES_IN=7d

# Bcrypt cost factor (higher = slower, more secure)
# Recommended: 12+ in production
BCRYPT_COST=12

# MFA Encryption Key (used to derive an AES-256 key for encrypting MFA secrets)
# Recommended: 32 random bytes (64 hex chars). Generate with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MFA_ENCRYPTION_KEY=your-64-char-hex-key-change-in-production

# Auth rate limiting (basic in-memory limiter)
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_LOGIN_MAX_PER_IP=20
AUTH_LOGIN_MAX_PER_IP_EMAIL=5
AUTH_VERIFY_MFA_MAX_PER_IP=30

# Environment
NODE_ENV=development

# Server Port
PORT=3000

# AI Provider Configuration
# AI_PROVIDER: 'nova' (default, uses AWS Bedrock) or 'openai'
AI_PROVIDER=nova

# OpenAI API Key (only needed if AI_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key

# AWS Configuration (for Nova provider and transcription)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Transcription Configuration
# Provider options: aws-medical (HIPAA-eligible), aws-standard
DEFAULT_TRANSCRIPTION_PROVIDER=aws-medical
# Medical specialty for AWS Medical Transcribe: PRIMARYCARE, CARDIOLOGY, NEUROLOGY, ONCOLOGY, RADIOLOGY, UROLOGY
DEFAULT_MEDICAL_SPECIALTY=PRIMARYCARE
