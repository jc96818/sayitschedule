# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/sayitschedule

# Organization domain for local development
ORG_DOMAIN=demo

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Environment
NODE_ENV=development

# Server Port
PORT=3000

# AI API Key (for natural language processing)
AI_API_KEY=your-ai-api-key

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Transcription Configuration
# Provider options: aws-medical (HIPAA-eligible), aws-standard
DEFAULT_TRANSCRIPTION_PROVIDER=aws-medical
# Medical specialty for AWS Medical Transcribe: PRIMARYCARE, CARDIOLOGY, NEUROLOGY, ONCOLOGY, RADIOLOGY, UROLOGY
DEFAULT_MEDICAL_SPECIALTY=PRIMARYCARE
