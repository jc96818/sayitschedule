# Say It Schedule - Shared Infrastructure Variables
# Copy to terraform.tfvars and fill in your values

aws_region = "us-east-1"

# Host header for ALB routing
# Use wildcard for multi-tenant subdomains: *.sayitschedule.com
# Or use specific subdomain: demo.sayitschedule.com
host_header = "*.sayitschedule.com"

# Additional host headers to route (e.g., root domain for login page)
additional_host_headers = ["sayitschedule.com"]

# Route53 configuration for DNS records
route53_zone_name  = "sayitschedule.com"
subdomain          = "*"              # Creates *.sayitschedule.com record
create_root_record = true             # Creates sayitschedule.com record

# ACM certificate ARN (must cover *.sayitschedule.com and sayitschedule.com)
certificate_arn = "arn:aws:acm:us-east-1:YOUR_ACCOUNT:certificate/YOUR_CERT_ID"

# Database credentials (creates user/database in shared RDS)
# Generate password: openssl rand -base64 24
db_name     = "sayitschedule"
db_username = "sayitschedule"
db_password = "your-secure-database-password"

# Generate a secure JWT secret (32+ characters)
# Example: openssl rand -base64 32
jwt_secret = "your-secure-jwt-secret-32-chars-minimum"

# OpenAI API key for voice processing
ai_api_key = "sk-your-openai-api-key"

# Optional: Adjust container size
# container_cpu    = 256   # 0.25 vCPU (minimum)
# container_memory = 512   # 512 MB
